#!/bin/bash
export CPATH=/disk2/opt/arthrex-yocto/sysroots/armv7a-neon-oe-linux-gnueabi/usr/include/

#Set all the build parameters
TOOLCHAIN_DIR=/disk2/opt/arthrex-yocto/sysroots/x86_64-oesdk-linux/usr/
TOOLCHAIN_PREFIX=/bin/arm-oe-linux-gnueabi/arm-oe-linux-gnueabi-

SSL_ARCH=linux-armv4
BIND_ID=77
TARGET_OS_NAME=Linux
TARGET_OS_VERSION=Yocto10
TARGET_OS_ARCH=armv7a-neon
TARGET_OS_UNAME="Linux Yocto 10 ARMv7 nodistro.0 GNU/Linux"

PLATFORM_DIR=/disk2/opt/arthrex-yocto/sysroots/armv7a-neon-oe-linux-gnueabi/usr/
export SYSROOT=/disk2/opt/arthrex-yocto/sysroots/armv7a-neon-oe-linux-gnueabi

export PLATFORM_INCLUDE="-I$PLATFORM_DIR/include -I$PLATFORM_DIR/openssl/image/usr/include/ -I$PLATFORM_DIR/include/c++/5.3.0/ -I$PLATFORM_DIR/include/c++/5.3.0/arm-oe-linux-gnueabi/"
export PLATFORM_LIBS="-L$PLATFORM_DIR/lib -L$PLATFORM_DIR/openssl/image/usr/lib/ -lssl -lcrypto -ldl -lrt -lpthread "
export PLATFORM_DEFINES=" -DLINUX -DLITTLE_ENDIAN_SHORT_ALIGNED -DNET_EPOLL -DGLOBALLY_ACCOUNT_BYTES "
export PLATFROM_COMPILE_SWITCHES="-O3 -fdata-sections -march=armv7-a -mfpu=neon  -mfloat-abi=softfp --sysroot=$SYSROOT"
export PLATFROM_LINK_SWITCHES="-static -Wl,--gc-sections --sysroot=$SYSROOT"
export STRIP_PARAMS="-s -S -g -x -X"
