#!/bin/bash

#Set all the build parameters
TOOLCHAIN_DIR=$RDK_TOOLCHAIN_PATH
TOOLCHAIN_PREFIX=/bin/arm-linux-gnueabihf-

export SSL_ARCH=linux-armv4
export BIND_ID=86
export TARGET_OS_NAME=Linaro
export TARGET_OS_VERSION=gcc5.2
export TARGET_OS_ARCH=armv7ahf
export TARGET_OS_UNAME=linaro-armv7ahf-2015.11-gcc5.2

export PLATFORM_INCLUDE="-I$RDK_PROJECT_ROOT_PATH/opensource/include -I$RDK_PROJECT_ROOT_PATH/opensource/openssl/include -I$RDK_PROJECT_ROOT_PATH/rdklogger/include -I$RDK_PROJECT_ROOT_PATH/opensource/src/soxr/src/ -I$RDK_PROJECT_ROOT_PATH/plugins -I$RDK_PROJECT_ROOT_PATH/plugins/xaudio/ -I$RDK_PROJECT_ROOT_PATH/opensource/src/rtmessage -I$RDK_PROJECT_ROOT_PATH/utility/sysUtils/include -I$RDK_PROJECT_ROOT_PATH/mfrlibs/include "

export PLATFORM_LIBS="-L$RDK_PROJECT_ROOT_PATH/sdk/fsroot/src/../../../opensource/lib -L$RDK_PROJECT_ROOT_PATH/rdklogger/src/.libs -lrdkloggers -lssl -lcrypto -llog4c -ldl -lrt -lpthread -L$RDK_PROJECT_ROOT_PATH/opensource/src/soxr/build/src/ -lsoxr -L$RDK_PROJECT_ROOT_PATH/plugins/xaudio/ -lxaudioapi -L$RDK_PROJECT_ROOT_PATH/plugins/soc -lhalrtc -L$RDK_PROJECT_ROOT_PATH/opensource/src/rtmessage/ -lrtMessage -L$RDK_PROJECT_ROOT_PATH/utility/sysUtils/src -lsysutils -L$RDK_PROJECT_ROOT_PATH/sdk/fsroot/src/vendor/img/fs/shadow_root/usr/lib -lmfrApi "

export PLATFORM_DEFINES=" -DLINUX -DLITTLE_ENDIAN_SHORT_ALIGNED -DNET_EPOLL -DHAS_EPOLL_TIMERS -DGLOBALLY_ACCOUNT_BYTES -DHAS_PROTOCOL_API -DHAS_G711 -DHAS_PROTOCOL_RAWMEDIA -DUSE_CUSTOM_SSL -DWRTC_CAPAB_HAS_HEARTBEAT  -DOPENSSL_API_COMPAT=0x10100000L -DPLAYBACK_SUPPORT -DRTMSG -DUSE_MFRLIB -DRDKC "
export PLATFROM_COMPILE_SWITCHES="-g -O3 -fdata-sections -ffunction-sections "
export PLATFROM_LINK_SWITCHES="-g -Wl,--gc-sections  -Wl,-rpath-link=$RDK_PROJECT_ROOT_PATH/sdk/fsroot/src/vendor/img/fs/shadow_root/usr/lib/ -Wl,-rpath-link=$RDK_PROJECT_ROOT_PATH/sdk/fsroot/ramdisk/usr/lib/"
export STRIP_PARAMS="-s -S -g -x -X"
