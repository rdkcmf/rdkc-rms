#!/bin/bash

#Set all the build parameters
TOOLCHAIN_DIR=$RDK_TOOLCHAIN_PATH
TOOLCHAIN_PREFIX=/bin/arm-linux-gnueabihf-

SSL_ARCH=linux-armv4
BIND_ID=86
TARGET_OS_NAME=Linaro
TARGET_OS_VERSION=gcc4.9
TARGET_OS_ARCH=armv7ahf
TARGET_OS_UNAME="linaro-armv7ahf-2014.12-gcc4.9"

export PLATFORM_INCLUDE="-I$RDK_PROJECT_ROOT_PATH/opensource/include -I$RDK_PROJECT_ROOT_PATH/opensource/openssl/include -I$RDK_PROJECT_ROOT_PATH/rdklogger/include -I$RDK_PROJECT_ROOT_PATH/sdk/fsroot/src/share/sc_config -I$RDK_PROJECT_ROOT_PATH/opensource/src/soxr/src/ -I$RDK_PROJECT_ROOT_PATH/plugins -I$RDK_PROJECT_ROOT_PATH/utility/sysUtils/include "

export PLATFORM_LIBS="-L$RDK_PROJECT_ROOT_PATH/sdk/fsroot/src/../../../opensource/lib -L$RDK_PROJECT_ROOT_PATH/rdklogger/src/.libs -lrdkloggers  -lssl -lcrypto  -llog4c -ldl -lrt -lpthread -L$RDK_PROJECT_ROOT_PATH/opensource/src/soxr/build/src/ -lsoxr -L$RDK_PROJECT_ROOT_PATH/plugins/soc -lhalrtc -L$RDK_PROJECT_ROOT_PATH/utility/sysUtils/src -lsysutils "


export PLATFORM_DEFINES=" -DLINUX -DLITTLE_ENDIAN_SHORT_ALIGNED -DNET_EPOLL -DHAS_EPOLL_TIMERS -DGLOBALLY_ACCOUNT_BYTES -DHAS_PROTOCOL_API -DHAS_G711 -DHAS_PROTOCOL_RAWMEDIA -DUSE_CUSTOM_SSL -DWRTC_CAPAB_HAS_HEARTBEAT  -DOPENSSL_API_COMPAT=0x10100000L  -DRDKC "
export PLATFROM_COMPILE_SWITCHES="-g -O3 -fdata-sections -ffunction-sections "
export PLATFROM_LINK_SWITCHES="-g -Wl,--gc-sections -Wl,-rpath-link=$RDK_PROJECT_ROOT_PATH/sdk/fsroot/ramdisk/usr/lib"
export STRIP_PARAMS="-s -S -g -x -X"
